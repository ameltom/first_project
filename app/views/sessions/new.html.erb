<div>
  <h1>OR</h1>
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>

  <%= form_tag '/sessions/create', :method => :post do %>
      <div class="field">
        <%= label_tag :username %><br />
        <%= text_field_tag :username %>
      </div>
      <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </div>
      <div class="actions">
        <%= submit_tag 'Login' %> or <a href="/users/new">Sign up</a>
      </div>
  <% end %>
</div>